<dl>
  <dt><div class='study-title'>Study Title</div></dt>
  <dd><%= @study.brief_title %></dd>
</dl>

<h4>New Tag</h4>

<%= form_for(@tag) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error-explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h4>

      <ul>
      <% @tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="star-rating"></div>
  <div class="form-group">
    <br>
    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= hidden_field_tag(:nct_id,@tag.nct_id) %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>